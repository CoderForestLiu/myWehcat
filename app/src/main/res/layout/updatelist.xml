<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/circle_headimg"
                android:layout_width="31dp"
                android:layout_height="33dp"
                android:layout_marginLeft="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/circle_name"
                    android:textColor="@color/circle_text_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/circle_text"
                    android:textColor="@color/titleText"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/circle_img"
            android:layout_width="230dp"
            android:layout_height="160dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/circle_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/circle_time_color"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/feed"
                android:layout_width="55dp"
                android:layout_height="37dp"
                android:layout_marginLeft="140dp"

                android:layout_marginTop="20dp"
                android:background="@mipmap/feed" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>