                android:divider="@drawable/discover_divier"
                android:dividerHeight="0.5dp"></com.example.mywechat.view.NestedListView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/contact_background" />

            <com.example.mywechat.view.NestedListView
                android:id="@+id/discover_listview_video"
