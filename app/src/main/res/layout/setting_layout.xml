                android:divider="@drawable/discover_divier"
                android:dividerHeight="0.5dp"></com.example.mywechat.view.NestedListView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/contact_background" />

            <com.example.mywechat.view.NestedListView
                android:id="@+id/discover_listview6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/list_background"
                android:divider="@drawable/discover_divier"
                android:paddingLeft="150dp"
                android:dividerHeight="0.5dp"></com.example.mywechat.view.NestedListView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/contact_background" />



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





